@model OnlineCoffeeStoreClientSite.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit User</h2>

<form asp-action="Edit" asp-controller="User" method="post" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Orders" />
    <input type="hidden" asp-for="CreatedOn" />

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>@Html.LabelFor(m => m.FirstName)</th>
                <td>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(m => m.LastName)</th>
                <td>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(m => m.Email)</th>
                <td>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(m => m.Password)</th>
                <td>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(m => m.IsActivated)</th>
                <td>
                    <div class="form-check form-check-inline">
                        <input asp-for="IsActivated" class="form-check-input" type="radio" id="isActivatedTrue" value="true" />
                        <label class="form-check-label" for="isActivatedTrue">Activated</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="IsActivated" class="form-check-input" type="radio" id="isActivatedFalse" value="false" />
                        <label class="form-check-label" for="isActivatedFalse">Not Activated</label>
                    </div>
                    @Html.ValidationMessageFor(m => m.IsActivated, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th>@Html.LabelFor(m => m.Role)</th>
                <td>
                    @Html.DropDownListFor(m => m.Role, (IEnumerable<SelectListItem>)ViewBag.RoleList, "-- Select Status --")

                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">Back</a>
                </td>
            </tr>
        </tbody>
    </table>
</form>
